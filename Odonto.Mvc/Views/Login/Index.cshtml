@model Odonto.Mvc.Models.FuncionarioViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/swal/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign 2 In</h3>
                    </div>
                    <div class="panel-body">
                        @using (Ajax.BeginForm("Autenticar", "Login", new AjaxOptions { HttpMethod = "Post", OnSuccess = "onSuccess", OnBegin = "onBegin" }, new { @id = "frmLogin", @class = "data-url", data_redirect = ViewBag.ReturnUrl }))
                        {
                            //cria a tag do formulário
                            @Html.AntiForgeryToken()
                            <fieldset>
                                <div class="form-group">
                                    @Html.Label("E-mail")
                                    @Html.TextBoxFor(m => m.Email, new { @id = "txEmail", @type = "email", @class = "form-control", placeholder = "Digite o e-mail." })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Senha")
                                    @Html.TextBoxFor(m => m.Senha, new { @id = "txSenha", @type = "password", @class = "form-control", placeholder = "Digite a senha." })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" id="btnLogar" class="btn btn-lg btn-success btn-block">Login</button>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sweetAlert")
    @Scripts.Render("~/bundles/LoginIndex")
</body>
</html>
